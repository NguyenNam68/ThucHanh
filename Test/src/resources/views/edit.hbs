<div class="card">
  <div class="card-header">
    SỬA LẠI THÔNG TIN KHÓA HỌC
  </div>
  <div class="card-body">
    {{#each courses}}
    <form action="/edit/{{this.id}}" method="POST">
        <div class="input-group mb-3">
          <label for="name" class="input-group-text" id="basic-addon1">Tên khóa học</label>
          <input type="text" id="name" name="name" value="{{this.name}}" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
        </div>

        <div class="input-group mb-3">
          <label for="description" class="input-group-text" id="basic-addon2">Mô tả chi tiết</label>
          <input type="text" id="description" name="description" value="{{this.description}}" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon2">
        </div>

        <div class="input-group mb-3">
          <label for="image" class="input-group-text" id="basic-addon2">Hình ảnh</label>
          <input type="text" id="image" name="image" value="{{this.image}}" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon2">
        </div>

        <div class="input-group mb-3">
          <label for="price" class="input-group-text" id="basic-addon2">Giá</label>
          <input type="text" id="price" name="price" value="{{this.price}}" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon2">
        </div>

        <div class="input-group mb-3">
          <label for="gender" class="input-group-text" id="basic-addon2">Giới Tính</label>
          {{#if this.gender}}<input type="radio" id="gender" name="gender" value="1" placeholder="" aria-label="" aria-describedby="basic-addon2" checked="checked">Nam
          <input type="radio" id="gender" name="gender" value="0" placeholder="" aria-label="" aria-describedby="basic-addon2">Nữ
          {{else}}<input type="radio" id="gender" name="gender" value="1" placeholder="" aria-label="" aria-describedby="basic-addon2">Nam
          <input type="radio" id="gender" name="gender" value="0" placeholder="" aria-label="" aria-describedby="basic-addon2" checked="checked">Nữ
          {{/if}}
        </div>

        <div class="input-group">
          <button type="submit" class="btn btn-primary" style="color:white; margin-top:40px">Lưu lại</button>
        </div>
    </form>
    {{/each}}
  </div>
</div>